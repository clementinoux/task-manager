<h1>TASKS LIST</h1>
<% @tasks.each do |task| %>
  <%= task.id %> : <%= task.name %><p></p>
  <%= link_to "Show", task_path(task) %>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <hr>
<% end %><p></p>
<h2><%= link_to "Add a new task", new_task_path %></h2>
